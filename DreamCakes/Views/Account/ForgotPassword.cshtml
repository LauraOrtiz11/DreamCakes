@{
    ViewBag.Title = "Recuperar contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="box-shadow: 0 4px 30px rgba(72, 52, 112, 0.3); max-width: 500px; margin: 60px auto; background-color: var(--gray); border-radius: 10px; padding: 30px; font-family: 'Segoe UI', sans-serif;">
    <h2 style="color: var(--purple); text-align: center; margin-bottom: 20px;">¿Olvidaste tu contraseña?</h2>
    <p style="color: var(--text); font-size: 15px; text-align: center;">Ingresa tu correo electrónico y te enviaremos un enlace para restablecer tu contraseña.</p>

    @if (ViewBag.MensajeExito != null)
    {
        <div style="background-color: #d0f0d0; color: #2e7d32; padding: 12px; border-radius: 6px; margin-top: 15px;">
            @ViewBag.MensajeExito
        </div>
    }
    else if (ViewBag.MensajeError != null)
    {
        <div style="background-color: #ffe0e0; color: var(--wine); padding: 12px; border-radius: 6px; margin-top: 15px;">
            @ViewBag.MensajeError
        </div>
    }

    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
    {
        <div style="margin-top: 20px;">
            <label for="email" style="display: block; color: var(--light-purple); font-weight: bold;">Correo electrónico</label>
            <input type="email" name="email" class="form-control" placeholder="ejemplo@correo.com"
                   style="width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ccc; border-radius: 6px;" required />
        </div>

        <div style="display: flex; justify-content: center; gap: 15px; margin-top: 25px;">
            <button type="submit"
                    style="background-color: var(--wine); color: white; padding: 10px 20px; font-size: 16px; border-radius: 6px; border: none; cursor: pointer; transition: background 0.3s;"
                    onmouseover="this.style.backgroundColor='var(--light-wine)'" onmouseout="this.style.backgroundColor='var(--wine)'">
                Enviar enlace de recuperación
            </button>

            <a href="@Url.Action("Index")"
               style="background-color: transparent; color: var(--purple); padding: 10px 20px; font-size: 16px; border: 2px solid var(--purple); border-radius: 6px; text-decoration: none; font-weight: bold; transition: background 0.3s, color 0.3s;">
                Cancelar
            </a>
        </div>
    }
</div>
