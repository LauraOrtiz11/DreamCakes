@model DreamCakes.Dtos.Admin.AdminCategoryDto

@{
    ViewBag.Title = "Editar Categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dp-edit-container">
    <h2 class="dp-edit-title">Editar Categoría</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="dp-form">

            @Html.HiddenFor(model => model.ID_Category)

            <div class="dp-form-group">
                @Html.LabelFor(model => model.CatName, new { @class = "dp-label" })
                @Html.EditorFor(model => model.CatName, new { htmlAttributes = new { @class = "dp-input" } })
                @Html.ValidationMessageFor(model => model.CatName, "", new { @class = "dp-validation" })
            </div>

            <div class="dp-form-group">
                @Html.LabelFor(model => model.CatDescription, new { @class = "dp-label" })
                @Html.EditorFor(model => model.CatDescription, new { htmlAttributes = new { @class = "dp-input" } })
                @Html.ValidationMessageFor(model => model.CatDescription, "", new { @class = "dp-validation" })
            </div>

            <div class="dp-form-group dp-checkbox-group">
                @Html.EditorFor(model => model.CatIsActive, new { htmlAttributes = new { @class = "dp-checkbox" } })
                @Html.LabelFor(model => model.CatIsActive, new { @class = "dp-label-checkbox" })
                @Html.ValidationMessageFor(model => model.CatIsActive, "", new { @class = "dp-validation" })
            </div>

            <div class="dp-form-buttons">
                <button type="submit" class="dp-btn dp-btn-save">
                    <i class="fas fa-save dp-icon"></i> Guardar
                </button>
                @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "dp-btn dp-btn-back" })
            </div>
        </div>
    }
</div>

<style>


    .dp-edit-container {
        max-width: 600px;
        margin: 3rem auto;
        padding: 2rem 2.5rem;
        background-color: var(--gray-light);
        border-radius: var(--rounded-border);
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: var(--text-color);
    }

    .dp-edit-title {
        text-align: center;
        color: var(--purple);
        font-weight: 700;
        font-size: 2rem;
        margin-bottom: 2rem;
        user-select: none;
    }

    .dp-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .dp-form-group {
        display: flex;
        flex-direction: column;
    }

    .dp-label {
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: var(--purple);
        user-select: none;
    }

    .dp-input {
        padding: 0.6rem 0.8rem;
        font-size: 1rem;
        border: 1.5px solid #ccc;
        border-radius: var(--rounded-border);
        transition: border-color 0.3s ease;
    }

        .dp-input:focus {
            border-color: var(--purple);
            outline: none;
            box-shadow: 0 0 5px var(--light-purple);
        }

    .dp-validation {
        color: var(--error-color);
        font-size: 0.875rem;
        margin-top: 0.3rem;
    }

    .dp-checkbox-group {
        flex-direction: row;
        align-items: center;
        gap: 0.5rem;
    }

    .dp-checkbox {
        width: 18px;
        height: 18px;
        cursor: pointer;
    }

    .dp-label-checkbox {
        margin: 0;
        font-weight: 600;
        color: var(--purple);
        cursor: pointer;
        user-select: none;
    }

    .dp-form-buttons {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 2rem;
    }

    .dp-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.6rem 1.4rem;
        font-size: 1rem;
        font-weight: 700;
        border-radius: var(--rounded-border);
        cursor: pointer;
        border: none;
        text-decoration: none;
        user-select: none;
        transition: background-color 0.3s ease;
    }

    .dp-btn-save {
        background-color: var(--purple);
        color: white;
    }

        .dp-btn-save:hover {
            background-color: var(--light-purple);
        }

    .dp-btn-back {
        background-color: transparent;
        color: var(--purple);
        border: 2px solid var(--purple);
    }

        .dp-btn-back:hover {
            background-color: var(--purple);
            color: white;
            text-decoration: none;
        }

    .dp-icon {
        font-size: 18px;
    }
</style>
