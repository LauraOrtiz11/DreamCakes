@model DreamCakes.Dtos.LoginDto

<!-- Modal Login -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="loginModalLabel">Iniciar Sesión</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                @if (TempData["LoginMessage"] != null)
                {
                    <div class="alert alert-danger">@TempData["LoginMessage"]</div>
                }

                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group floating-label">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control floating-input", placeholder = " " })
                        @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "floating-text" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group floating-label">
                        @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control floating-input", placeholder = " " })
                        @Html.LabelFor(m => m.Contrasena, htmlAttributes: new { @class = "floating-text" })
                        @Html.ValidationMessageFor(m => m.Contrasena, "", new { @class = "text-danger" })
                    </div>

                    <!-- LINK A REGISTRO -->
                    <div class="text-center">
                        ¿No tienes cuenta?
                        <a href="#" class="login-link" id="goToRegisterFromLogin" data-toggle="modal" data-target="#registerModal" data-dismiss="modal">Registrarse</a>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn-gray">Iniciar Sesión</button>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
