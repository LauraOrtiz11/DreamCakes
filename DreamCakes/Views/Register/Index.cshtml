﻿@model DreamCakes.Repositories.Models.USUARIO

<!-- Modal de Registro -->
<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("Index", "Register", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                <div class="modal-header">
                    <h5 class="modal-title">Registro</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group floating-label">
                        @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "form-control floating-input", placeholder = " " } })
                        @Html.LabelFor(model => model.Nombres, htmlAttributes: new { @class = "floating-text" })
                        @Html.ValidationMessageFor(model => model.Nombres, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group floating-label">
                        @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "form-control floating-input", placeholder = " " } })
                        @Html.LabelFor(model => model.Apellidos, htmlAttributes: new { @class = "floating-text" })
                        @Html.ValidationMessageFor(model => model.Apellidos, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group floating-label">
                        @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control floating-input", placeholder = " " } })
                        @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "floating-text" })
                        @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group floating-label">
                        @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control floating-input", placeholder = " " } })
                        @Html.LabelFor(model => model.Direccion, htmlAttributes: new { @class = "floating-text" })
                        @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group floating-label">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control floating-input", placeholder = " " } })
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "floating-text" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group floating-label">
                        @Html.EditorFor(model => model.Contrasena, new { htmlAttributes = new { @class = "form-control floating-input", placeholder = " ", type = "password" } })
                        @Html.LabelFor(model => model.Contrasena, htmlAttributes: new { @class = "floating-text" })
                        @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })
                    </div>

                    <!-- LINK LOGIN -->
                    <div class="text-center mt-3">
                        ¿Ya tienes cuenta?
                        <a href="#" class="login-link">Iniciar Sesión</a>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-wine">Registrarse</button>
                </div>
            }
        </div>
    </div>
</div>