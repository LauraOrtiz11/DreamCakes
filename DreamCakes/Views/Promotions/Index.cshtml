@model IEnumerable<DreamCakes.Dtos.Admin.PromotionDto>

@{
    ViewBag.Title = "Promociones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="titulo">Promociones</h2>

<p class="nueva-promocion">
    @Html.ActionLink("Nueva Promoción", "Create", null, new { @class = "btn-primario" })
</p>

<div class="contenedor-tabla">
    <table class="tabla-promociones">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descuento</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Estado</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NameProm)</td>
                    <td>@Html.DisplayFor(modelItem => item.DiscountPer)%</td>
                    <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                    <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                    <td>@(item.StateProm ? "Activa" : "Inactiva")</td>
                    <td>@Html.DisplayFor(modelItem => item.DescriProm)</td>
                    <td class="acciones-columna">
                        <a href="@Url.Action("Edit", new { id = item.ID_Prom })" class="btn-accion">
                            <img src="~/Content/icons/edit.svg" alt="Editar" class="icono" />
                            Editar
                        </a>
                        <a href="@Url.Action("Details", new { id = item.ID_Prom })" class="btn-accion">
                            <img src="~/Content/icons/list.svg" alt="Detalles" class="icono" />
                            Detalles
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.ID_Prom })" class="btn-accion eliminar">
                            <img src="~/Content/icons/delete.svg" alt="Eliminar" class="icono" />
                            Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>

    .titulo {
        text-align: center;
        color: var(--purple);
        font-size: 32px;
        margin-bottom: 25px;
    }

    .nueva-promocion {
        text-align: right;
        margin-bottom: 20px;
        margin-right: 5%;
    }

    .btn-primario {
        padding: 10px 20px;
        background-color: var(--purple);
        color: white;
        border-radius: 12px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s ease;
        margin-right:35px;
        
    }

        .btn-primario:hover {
            background-color: var(--light-purple);
        }

    .contenedor-tabla {
        display: flex;
        justify-content: center;
    }

    .tabla-promociones {
        width: 90%;
        max-width: 1100px;
        border-collapse: collapse;
        background-color: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    }

        .tabla-promociones thead {
            background-color: var(--purple);
            color: white;
        }

        .tabla-promociones th,
        .tabla-promociones td {
            padding: 14px 16px;
            text-align: left;
        }

        .tabla-promociones tbody tr:nth-child(even) {
            background-color: var(--gray);
        }

    .acciones-columna {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .btn-accion {
        display: flex;
        align-items: center;
        gap: 8px;
        color: var(--purple);
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s;
    }

        .btn-accion:hover {
            color: var(--light-purple);
        }

        .btn-accion.eliminar {
            color: var(--wine);
        }

            .btn-accion.eliminar:hover {
                color: var(--light-wine);
            }

    .icono {
        width: 18px;
        height: 18px;
    }
</style>
