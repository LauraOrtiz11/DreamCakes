@model DreamCakes.Dtos.Admin.PromotionDto

@{
    ViewBag.Title = "Detalles de la Promoción";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-center mt-4 mb-4 text-uppercase" style="color: var(--purple); font-weight: bold;">
    DETALLES DE LA PROMOCIÓN
</h4>

<div class="details-card">
    <dl class="details-list">
        <dt>Nombre</dt>
        <dd>@Model.NameProm</dd>

        <dt>Descuento</dt>
        <dd>@Model.DiscountPer %</dd>

        <dt>Fecha de Inicio</dt>
        <dd>@Model.StartDate.ToShortDateString()</dd>

        <dt>Fecha de Fin</dt>
        <dd>@Model.EndDate.ToShortDateString()</dd>

        <dt>Estado</dt>
        <dd>@(Model.StateProm ? "Activa" : "Inactiva")</dd>

        <dt>Descripción</dt>
        <dd>@Model.DescriProm</dd>
    </dl>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index")" class="secondary-button">Volver al listado</a>
    </div>
</div>



<style>
    .details-card {
        max-width: 700px;
        margin: auto;
        background-color: white;
        padding: 30px;
        border-radius: 1rem;
        box-shadow: 0 4px 30px rgba(72, 52, 112, 0.1);
    }

    .details-list {
        display: flex;
        flex-direction: column;
    }

        .details-list dt {
            font-weight: bold;
            color: var(--text);
            margin-top: 18px;
        }

        .details-list dd {
            margin-left: 0;
            font-size: 1rem;
            color: #555;
            border-bottom: 1px dashed #ddd;
            padding-bottom: 8px;
        }

    .secondary-button {
        padding: 10px 20px;
        background-color: var(--gray);
        color: black;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

        .secondary-button:hover {
            background-color: var(--dark-gray);
        }
</style>
