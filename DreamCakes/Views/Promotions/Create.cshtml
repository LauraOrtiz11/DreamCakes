@model DreamCakes.Dtos.Admin.PromotionDto

@{
    ViewBag.Title = "Crear Promoción";
}

<h2 class="titulo">Crear Nueva Promoción</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-contenedor">
        <div class="form-group">
            <label>Nombre de la promoción</label>
            @Html.TextBoxFor(m => m.NameProm, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Porcentaje de descuento</label>
            @Html.TextBoxFor(m => m.DiscountPer, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.DiscountPer, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Fecha de inicio</label>
            @Html.TextBoxFor(m => m.StartDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Fecha de fin</label>
            @Html.TextBoxFor(m => m.EndDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.EndDate, "", new { @class = "text-danger" })
        </div>

        <div class="form-group check-group">
            <label>Estado de la promoción</label>
            @Html.CheckBoxFor(m => m.StateProm)
        </div>

        <div class="form-group">
            <label>Descripción de la promoción</label>
            @Html.TextBoxFor(m => m.DescriProm, new { @class = "form-control" })
        </div>

        <div class="botones">
            <input type="submit" value="Guardar" class="btn-primario" />
            @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "dp-btn dp-btn-back" })
        </div>
    </div>
}

<style>

    .titulo {
        text-align: center;
        color: var(--purple);
        font-size: 28px;
        margin-bottom: 25px;
    }

    .form-contenedor {
        max-width: 600px;
        margin: 0 auto;
        background-color: var(--gray);
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: bold;
        color: var(--text);
        display: block;
        margin-bottom: 8px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid var(--dark-gray);
        background-color: white;
        color: var(--text);
    }

    .check-group {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .text-danger {
        color: var(--wine);
        font-size: 0.9em;
    }

    .botones {
        text-align: center;
        margin-top: 20px;
    }

    .btn-primario,
    .btn-secundario {
        padding: 10px 18px;
        border-radius: 10px;
        font-weight: bold;
        text-decoration: none;
        display: inline-block;
        margin-right: 10px;
        transition: background-color 0.3s ease;
    }

    .btn-primario {
        background-color: var(--purple);
        color: white;
        border: none;
        cursor: pointer;
    }

    .btn-primario:hover {
        background-color: var(--light-purple);
    }

    .btn-secundario {
        background-color: var(--wine);
        color: white;
    }

    .btn-secundario:hover {
        background-color: var(--light-wine);
    }
    .dp-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.6rem 1.4rem;
        font-size: 1rem;
        font-weight: 700;
        border-radius: var(--rounded-border);
        cursor: pointer;
        border: none;
        text-decoration: none;
        user-select: none;
        transition: background-color 0.3s ease;
    }

    .dp-btn-back {
        background-color: transparent;
        color: var(--purple);
        border: 2px solid var(--purple);
    }

        .dp-btn-back:hover {
            background-color: var(--purple);
            color: white;
            text-decoration: none;
        }
</style>
