@model DreamCakes.Models.DTO.PromotionDTO

@{
    ViewBag.Title = "Eliminar Promoción";
}

<h2>¿Eliminar esta Promoción?</h2>

<div>
    <dl class="dl-horizontal">
        <dt>Nombre:</dt>
        <dd>@Model.NameProm</dd>

        <dt>Descuento:</dt>
        <dd>@Model.DiscountPer %</dd>

        <dt>Estado:</dt>
        <dd>@(Model.StateProm ? "Activa" : "Inactiva")</dd>
    </dl>
</div>

@using (Html.BeginForm("Delete", "Promotions", new { id = Model.ID_Prom }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <input type="submit" value="Confirmar Eliminación" class="btn btn-danger" />
    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
}
