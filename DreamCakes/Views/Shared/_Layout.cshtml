<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>

    <!-- Bootstrap 4 y estilos -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm px-4">
            <a class="navbar-brand font-weight-bold text-white" href="@Url.Action("Index", "Home")">Mi aplicación ASP.NET</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("About", "Home")">Acerca de</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact", "Home")">Contacto</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link" data-toggle="modal" data-target="#registerModal">Registrarse</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- CONTENIDO PRINCIPAL -->
    <main role="main" class="container flex-grow-1 py-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark text-center text-white py-3 mt-auto">
        &copy; @DateTime.Now.Year - Mi aplicación ASP.NET
    </footer>

    <!-- MODAL REGISTRO -->
    @Html.Partial("~/Views/Register/Index.cshtml")

    <!-- Scripts de Bootstrap y jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
