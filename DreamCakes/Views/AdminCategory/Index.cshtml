@model List<DreamCakes.Dtos.Admin.AdminCategoryDto>

@{
    ViewBag.Title = "Lista de Categorías";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 dp-container">
    <h2 class="dp-title">@ViewBag.Title</h2>
    <hr class="dp-divider" />
    <p>
        <a href="@Url.Action("Create")" class="dp-btn-create-colored">
            <img src="~/Content/icons/plus.svg" alt="Crear" class="dp-icon-btn" /> Crear Nueva Categoría
        </a>
    </p>

    <div class="table-responsive">
        <table class="table dp-table">
            <thead class="dp-table-header">
                <tr class="dp-table-header-row">
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Estado</th>
                    <th class="dp-actions-column-header">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="dp-table-row">
                        <td>@item.CatName</td>
                        <td>@item.CatDescription</td>
                        <td>@(item.CatIsActive ? "Activo" : "Inactivo")</td>
                        <td class="dp-actions-column">
                            <a href="@Url.Action("Edit", new { id = item.ID_Category })" class="dp-action-btn dp-edit">
                                <img src="~/Content/icons/edit.svg" alt="Editar" class="dp-icon-btn" /> Editar
                            </a>
                            <a href="@Url.Action("Details", new { id = item.ID_Category })" class="dp-action-btn dp-details">
                                <img src="~/Content/icons/list.svg" alt="Detalles" class="dp-icon-btn" /> Detalles
                            </a>
                            <a href="@Url.Action("Delete", new { id = item.ID_Category })" class="dp-action-btn dp-delete">
                                <img src="~/Content/icons/delete.svg" alt="Eliminar" class="dp-icon-btn" /> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Reutilizando variables y estilos de productos */

    :root {
        --wine: #9B2020;
        --light-wine: #B23232;
        --purple: #483470;
        --light-purple: #5a2d82;
        --gray: #F8F9FA;
        --text: #333333;
        --rounded-border: 0.5rem;
    }

    .dp-container {
        max-width: 900px;
        margin: 0 auto;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: var(--text);
    }

    .dp-title {
        color: var(--purple);
        font-weight: 700;
    }

    .dp-divider {
        border-color: var(--light-purple);
        margin-bottom: 1rem;
    }

    /* Botón Crear con fondo morado */
    .dp-btn-create-colored {
        background-color: var(--purple);
        border: none;
        color: white;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 8px 14px;
        border-radius: var(--rounded-border);
        cursor: pointer;
        text-decoration: none;
        font-size: 1rem;
        transition: background-color 0.3s ease;
    }

        .dp-btn-create-colored:hover {
            background-color: var(--light-purple);
            text-decoration: none;
            color: white;
        }

        .dp-btn-create-colored .dp-icon-btn {
            width: 18px;
            height: 18px;
            pointer-events: none;
            filter: none;
        }

    /* Tabla */

    .dp-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 0.5rem;
    }

    .dp-table-header {
        background-color: var(--purple);
        color: white;
        font-weight: 600;
    }

    .dp-table-header-row {
        border-top-left-radius: var(--rounded-border);
        border-top-right-radius: var(--rounded-border);
        overflow: hidden;
    }

        .dp-table-header-row th:first-child {
            border-top-left-radius: var(--rounded-border);
        }

        .dp-table-header-row th:last-child {
            border-top-right-radius: var(--rounded-border);
        }

    .dp-table thead th {
        padding: 12px 15px;
        text-align: left;
        background-color: var(--purple);
        border-radius: 0;
    }

    .dp-table-row {
        background-color: var(--gray);
    }

        /* Sin hover en filas */
        .dp-table-row:hover {
            background-color: var(--gray);
            color: var(--text);
        }

    /* Columnas de acciones */
    .dp-actions-column {
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
    }

    /* Botones de acciones sin fondo, solo texto e icono con hover */
    .dp-action-btn {
        background: none;
        border: none;
        color: var(--purple);
        padding: 6px 12px;
        border-radius: var(--rounded-border);
        cursor: pointer;
        transition: color 0.3s ease;
        text-decoration: none;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 6px;
        justify-content: center;
    }

        .dp-action-btn:hover {
            color: var(--light-purple);
            text-decoration: underline;
            background: none;
        }

    .dp-icon-btn {
        width: 18px;
        height: 18px;
        pointer-events: none;
    }

    /* Solo para el botón eliminar cambiar color a vino */
    .dp-delete {
        color: var(--wine);
    }

        .dp-delete:hover {
            color: var(--light-wine);
            text-decoration: underline;
            background: none;
        }

    /* Header acciones alineado derecha */
    .dp-actions-column-header {
        text-align: center;
    }
</style>
