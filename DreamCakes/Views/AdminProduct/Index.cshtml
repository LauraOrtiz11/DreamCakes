@model IEnumerable<DreamCakes.Dtos.Admin.AdminProductDto>
@{
    ViewBag.Title = "Lista de Productos";
}

<div class="container mt-4 dp-container">
    <h2 class="dp-title">@ViewBag.Title</h2>
    <hr class="dp-divider" />
    <p>
        <a href="@Url.Action("Create")" class="dp-btn-create">
            <img src="~/Content/icons/plus.svg" alt="Crear" class="dp-icon-btn" /> Crear Nuevo Producto
        </a>
    </p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success dp-alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="table-responsive">
        <table class="table dp-table">
            <thead class="dp-table-header">
                <tr class="dp-table-header-row">
                    <th>Imagen</th>
                    <th>Nombre</th>
                    <th>Categoría</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="dp-table-row">
                        <td>
                            @if (item.Images != null && item.Images.Any())
                            {
                                <img src="@item.Images.First().ImgUrl" alt="@item.ProdName" class="dp-img" />
                            }
                            else
                            {
                                <span class="text-muted">Sin imagen</span>
                            }
                        </td>
                        <td>@item.ProdName</td>
                        <td>@item.CategoryName</td>
                        <td>@item.ProdPrice.ToString("C")</td>
                        <td>@item.ProdStock</td>
                        <td class="dp-actions-column">
                            <a href="@Url.Action("Edit", new { id = item.ID_Product })" class="dp-action-btn dp-edit">
                                <img src="~/Content/icons/edit.svg" alt="Editar" class="dp-icon-btn" /> Editar
                            </a>
                            <a href="@Url.Action("Details", new { id = item.ID_Product })" class="dp-action-btn dp-details">
                                <img src="~/Content/icons/list.svg" alt="Detalles" class="dp-icon-btn" /> Detalles
                            </a>
                            <button onclick="deleteProduct(@item.ID_Product)" class="dp-action-btn dp-delete">
                                <img src="~/Content/icons/delete.svg" alt="Eliminar" class="dp-icon-btn" /> Eliminar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    :root {
        --wine: #9B2020;
        --light-wine: #B23232;
        --purple: #483470;
        --light-purple: #5a2d82;
        --gray: #F8F9FA;
        --text: #333333;
        --rounded-border: 0.5rem;
    }

    .dp-container {
        max-width: 1000px;
        margin: 0 auto;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: var(--text);
    }

    .dp-title {
        color: var(--purple);
        font-weight: 700;
    }

    .dp-divider {
        border-color: var(--light-purple);
        margin-bottom: 1rem;
    }

    /* Botón Crear sin fondo ni borde, solo texto e ícono */
    .dp-btn-create {
        background: none;
        border: none;
        color: var(--purple);
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 0;
        cursor: pointer;
        text-decoration: none;
        font-size: 1rem;
    }

        .dp-btn-create:hover {
            color: var(--light-purple);
            text-decoration: underline;
        }

        /* Icono del botón Crear sin fondo ni borde */
        .dp-btn-create .dp-icon-btn {
            width: 18px;
            height: 18px;
            background: none !important;
            border: none !important;
            pointer-events: none;
            filter: none; /* Quita cualquier filtro */
        }

    .dp-alert-success {
        border-radius: var(--rounded-border);
    }

    .dp-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 0.5rem;
    }

    .dp-table-header {
        background-color: var(--purple);
        color: white;
        font-weight: 600;
    }

    .dp-table-header-row {
        border-top-left-radius: var(--rounded-border);
        border-top-right-radius: var(--rounded-border);
        overflow: hidden;
    }

        .dp-table-header-row th:first-child {
            border-top-left-radius: var(--rounded-border);
        }

        .dp-table-header-row th:last-child {
            border-top-right-radius: var(--rounded-border);
        }

    .dp-table thead th {
        padding: 12px 15px;
        text-align: left;
        background-color: var(--purple);
        border-radius: 0;
    }

    .dp-table-row {
        background-color: var(--gray);
    }

        /* sin hover en filas */
        .dp-table-row:hover {
            background-color: var(--gray);
            color: var(--text);
        }

    .dp-img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: var(--rounded-border);
    }

    .dp-actions-column {
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
    }

    /* Botones de acciones sin fondo, solo texto e icono con hover de color morado */
    .dp-action-btn {
        background: none;
        border: none;
        color: var(--purple);
        padding: 6px 12px;
        border-radius: var(--rounded-border);
        cursor: pointer;
        transition: color 0.3s ease;
        text-decoration: none;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 6px;
        justify-content: center;
    }

        .dp-action-btn:hover {
            color: var(--light-purple);
            text-decoration: underline;
            background: none;
        }

    .dp-icon-btn {
        width: 18px;
        height: 18px;
        pointer-events: none;
    }

    /* Solo para el botón eliminar cambiar color a vino, pero sin fondo */
    .dp-delete {
        color: var(--wine);
    }

        .dp-delete:hover {
            color: var(--light-wine);
            text-decoration: underline;
            background: none;
        }
</style>

@section Scripts {
    <script>
        function deleteProduct(id) {
            if (confirm('¿Está seguro que desea eliminar este producto?')) {
                $.post('@Url.Action("Delete")', { id: id }, function (data) {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.error || 'Error al eliminar el producto');
                    }
                }).fail(function () {
                    alert('Error de conexión con el servidor');
                });
            }
        }
    </script>
}
