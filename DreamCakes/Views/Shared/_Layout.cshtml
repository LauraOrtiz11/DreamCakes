﻿
<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Dream Cakes</title>

    <!-- Bootstrap 4 y estilos -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/Site.css")" />



</head>
<body>

    <!-- NAVBAR -->
    <header>
        <nav class="navbar-custom">
            <div class="navbar-container">
                <!-- Marca -->
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Dream Cakes</a>

                <!-- Menú centrado -->
                <ul class="navbar-menu">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            <img src="@Url.Content("~/Content/icons/home.svg")" width="28" height="20" alt="Inicio" />
                            Inicio
                        </a>
                    </li>

                </ul>

                
                    @Html.Partial("~/Views/Register/RegisterIndex.cshtml")
                    <div class="navbar-actions ">
                        <a href="#" class="btn-wine" data-toggle="modal" data-target="#registerModal">Registrarse</a>
                    </div>
                    @Html.Partial("~/Views/Login/LoginIndex.cshtml")
                    <div class="navbar-actions">
                        <a href="#" class="btn-gray" data-toggle="modal" data-target="#loginModal">Iniciar Sesión</a>
                    </div>
                    

         

            </div>
        </nav>
    </header>

   

    <!-- CONTENIDO PRINCIPAL -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer>
        &copy; @DateTime.Now.Year - Todos lo derechos reservados Dream Cakes.
    </footer>

    <!-- Scripts de Bootstrap y jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>


    <!-- Script para intercambiar entre login y registro -->
    <script>
        $(document).ready(function () {
            // Función para limpiar el modal de registro
            function cleanRegisterModal() {
                $('#registerForm')[0].reset();
                $('#registerModal .text-danger').hide();
                $('#registerModal #generalError').hide();
            }

            // Función para limpiar el modal de login
            function cleanLoginModal() {
                $('#loginForm')[0].reset();
                $('#loginModal .text-danger').hide();
                $('#loginModal #generalError').hide();
            }

            // Eventos para el modal de registro
            $('#registerModal .close').click(function () {
                cleanRegisterModal();
            });

            $('#registerModal').on('hidden.bs.modal', function () {
                cleanRegisterModal();
            });

            // Eventos para el modal de login
            $('#loginModal .close').click(function () {
                cleanLoginModal();
            });

            $('#loginModal').on('hidden.bs.modal', function () {
                cleanLoginModal();
            });

            // Eventos para cambiar entre modales
            $('#goToLoginFromRegister').click(function (e) {
                e.preventDefault();
                $('#registerModal').modal('hide');
                setTimeout(function () {
                    $('#loginModal').modal('show');
                }, 300);
            });

            $('#goToRegisterFromLogin').click(function (e) {
                e.preventDefault();
                $('#loginModal').modal('hide');
                setTimeout(function () {
                    $('#registerModal').modal('show');
                }, 300);
            });
        });
    </script>


    @RenderSection("scripts", required: false)
</body>
</html>