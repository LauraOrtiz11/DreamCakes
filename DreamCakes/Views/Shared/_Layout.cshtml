<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Dream Cakes</title>

    <!-- Bootstrap 4 y estilos -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/Site.css")" />



</head>
<body>

    <!-- NAVBAR -->
    <header>
        <nav class="navbar-custom">
            <div class="navbar-container">
                <!-- Marca -->
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Dream Cakes</a>

                <!-- Menú centrado -->
                <ul class="navbar-menu">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            <img src="@Url.Content("~/Content/icons/home.svg")" width="28" height="20" alt="Inicio" />
                            Inicio
                        </a>
                    </li>

                </ul>


                @Html.Partial("~/Views/Register/RegisterIndex.cshtml")
                <div class="navbar-actions ">
                    <a href="#" class="btn-wine" data-toggle="modal" data-target="#registerModal">Registrarse</a>
                </div>
                @Html.Partial("~/Views/Login/LoginIndex.cshtml")
                <div class="navbar-actions">
                    <a href="#" class="btn-gray" data-toggle="modal" data-target="#loginModal">Iniciar Sesión</a>
                </div>




            </div>
        </nav>
    </header>



    <!-- CONTENIDO PRINCIPAL -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer>
        &copy; @DateTime.Now.Year - Todos lo derechos reservados Dream Cakes.
    </footer>

    <!-- Scripts de Bootstrap y jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>


    <!-- En tu _Layout.cshtml -->
    <script src="~/Scripts/ModalManager.js"></script>
    <script>
    // Script inline para manejar TempData (ya que no podemos acceder desde JS externo)
    $(document).ready(function () {
        @if (TempData["ErrorMessage"] != null || TempData["SuccessMessage"] != null)
        {
            if (TempData["ShowModal"] != null)
            {
                if (TempData["ShowModal"].ToString() == "login")
                {
                    <text>
                    setTimeout(function() { $('#loginModal').modal('show'); }, 300);
                    </text>
                }
                else if (TempData["ShowModal"].ToString() == "register")
                {
                    <text>
                    setTimeout(function() { $('#registerModal').modal('show'); }, 300);
                    </text>
                }
            }
        }
    });
    </script>

    <script>
    // Manejo de modales en el Layout
    $(document).ready(function() {
        // Función para limpiar modales
        function cleanModals() {
            $('.modal form')[0].reset();
            $('.text-danger, .alert').hide();

            // Limpiar mensajes del servidor
            $.post('@Url.Action("ClearTempMessages", "Cleanup")');
        }

        // Configurar eventos
        $('.modal').on('hidden.bs.modal', cleanModals);
        $('.modal .close').click(cleanModals);

        // Mostrar modal inicial si hay mensajes
        @if (TempData["ErrorMessage"] != null || TempData["SuccessMessage"] != null)
        {
            <text>
            $('#@TempData["ShowModal"]Modal').modal('show');
            </text>
        }
    });
    </script>



    @RenderSection("scripts", required: false)
</body>
</html>