@model List<DreamCakes.Dtos.Admin.AdminUserDto>

@{
    ViewBag.Title = "Gestión de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-center mt-4 mb-4 text-uppercase text-secondary">Gestión de Usuarios</h4>

<div class="container">
    <div class="table-responsive">
        <table class="table table-hover align-middle text-center border rounded shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Estado</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-semibold">@item.UserFirstName</td>

                        <td>
                            <span class="badge bg-@(item.UserStatusName == "Activo" ? "success" : "secondary")">
                                @item.UserStatusName
                            </span>
                        </td>

                        <td>
                            <span class="badge bg-info text-dark">@item.UserRoleName</span>
                        </td>

                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.UserID }, new { @class = "btn btn-sm btn-outline-primary me-1" })
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.UserID }, new { @class = "btn btn-sm btn-outline-danger me-1" })
                            @Html.ActionLink("Detalles", "Details", new { id = item.UserID }, new { @class = "btn btn-sm btn-outline-secondary" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
