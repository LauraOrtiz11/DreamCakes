@model DreamCakes.Dtos.LoginDto

<!-- Modal Login -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginModalLabel">Iniciar Sesión</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }

                @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { id = "loginForm" }))
                {
                    @Html.AntiForgeryToken()

                    <div class=".form-group-Reg floating-label">
                        @Html.TextBoxFor(m => m.Email, new
                        {
                            @class = "form-control floating-input login-input",
                            placeholder = " ",
                            id = "LoginEmail"
                        })
                        @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "floating-text" })
                        <div id="loginEmailError" class="text-danger login-error" style="display: none;"></div>
                    </div>

                    <div class=".form-group-Reg floating-label">
                        @Html.PasswordFor(m => m.Contrasena, new
                        {
                            @class = "form-control floating-input login-input",
                            placeholder = " ",
                            id = "LoginPassword"
                        })
                        @Html.LabelFor(m => m.Contrasena, htmlAttributes: new { @class = "floating-text" })
                        <div id="loginPasswordError" class="text-danger login-error" style="display: none;"></div>
                    </div>

                    <!-- LINK A REGISTRO -->
                    <div class="text-center">
                        ¿No tienes cuenta?
                        <a href="#" class="login-link" id="goToRegisterFromLogin" data-toggle="modal" data-target="#registerModal" data-dismiss="modal">Registrarse</a>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn-gray">Iniciar Sesión</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Login.js"></script>