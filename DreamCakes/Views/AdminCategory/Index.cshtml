@model List<DreamCakes.Dtos.Admin.AdminCategoryDto>

@{
    ViewBag.Title = "Lista de Categorías";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-center mt-4 mb-4 text-uppercase" style="color: var(--purple); font-weight: bold;">
    CATEGORIAS
</h4>

<p class="new-button-container">
    <a href="@Url.Action("Create")" class="primary-button">
        Crear Nueva Categoría
    </a>
</p>

<div class="table-container">
    <table class="categories-table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th class="actions-header">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CatName</td>
                    <td>@item.CatDescription</td>
                    <td>@(item.CatIsActive ? "Activo" : "Inactivo")</td>
                    <td class="actions-column">
                        <a href="@Url.Action("Edit", new { id = item.ID_Category })" class="action-button">
                            <img src="~/Content/icons/edit.svg" alt="Editar" class="icon" /> Editar
                        </a>
                        <a href="@Url.Action("Details", new { id = item.ID_Category })" class="action-button">
                            <img src="~/Content/icons/list.svg" alt="Detalles" class="icon" /> Detalles
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.ID_Category })" class="action-button delete">
                            <img src="~/Content/icons/delete.svg" alt="Eliminar" class="icon" /> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>

    .title {
        text-align: center;
        color: var(--purple);
        font-size: 32px;
        margin-bottom: 25px;
    }

    .new-button-container {
        text-align: right;
        margin-bottom: 20px;
        margin-right: 5%;
    }

    .primary-button {
        padding: 10px 20px;
        background-color: var(--purple);
        color: white;
        border-radius: 12px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s ease;
        margin-right: 35px;
    }

    .primary-button:hover {
        background-color: var(--light-purple);
        color:white;
        text-decoration:none;
    }

    .table-container {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

    .categories-table {
        width: 90%;
        max-width: 1100px;
        border-collapse: collapse;
        background-color: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 30px rgba(72, 52, 112, 0.3);
    }

    .categories-table thead {
        background-color: var(--purple);
        color: white;
    }

    .categories-table th,
    .categories-table td {
        padding: 14px 16px;
        text-align: left;
    }

    .categories-table tbody tr:nth-child(even) {
        background-color: var(--gray);
    }

    .actions-header {
        text-align: center;
    }

    .actions-column {
        display: flex;
        flex-direction: column;
        gap: 10px;
        align-items: center;
    }

    .action-button {
        display: flex;
        align-items: center;
        gap: 8px;
        color: var(--purple);
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s;
    }

    .action-button:hover {
        color: var(--light-purple);
    }

    .action-button.delete {
        color: var(--wine);
    }

    .action-button.delete:hover {
        color: var(--light-wine);
    }

    .icon {
        width: 18px;
        height: 18px;
    }
</style>
