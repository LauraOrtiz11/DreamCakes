@model IEnumerable<DreamCakes.Dtos.Admin.PromotionDto>

@{
    ViewBag.Title = "Promociones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-center mt-4 mb-4 text-uppercase" style="color: var(--purple); font-weight: bold;">
    PROMOCIONES
</h4>

<p class="new-promotion">
    @Html.ActionLink("Nueva Promoción", "Create", null, new { @class = "primary-button" })
</p>

<div class="table-container">
    <table class="promotions-table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descuento</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Estado</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NameProm)</td>
                    <td>@Html.DisplayFor(modelItem => item.DiscountPer)%</td>
                    <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                    <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                    <td>@(item.StateProm ? "Activa" : "Inactiva")</td>
                    <td>@Html.DisplayFor(modelItem => item.DescriProm)</td>
                    <td class="actions-column">
                        <a href="@Url.Action("Edit", new { id = item.ID_Prom })" class="action-button">
                            <img src="~/Content/icons/edit.svg" alt="Editar" class="icon" />
                            Editar
                        </a>
                        <a href="@Url.Action("Details", new { id = item.ID_Prom })" class="action-button">
                            <img src="~/Content/icons/list.svg" alt="Detalles" class="icon" />
                            Detalles
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.ID_Prom })" class="action-button delete">
                            <img src="~/Content/icons/delete.svg" alt="Eliminar" class="icon" />
                            Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>

    .title {
        text-align: center;
        color: var(--purple);
        font-size: 32px;
        margin-bottom: 25px;
    }

    .new-promotion {
        text-align: right;
        margin-bottom: 20px;
        cursor: pointer;
        margin-right: 5%;
    }

    .primary-button {
        padding: 10px 20px;
        background-color: var(--purple);
        color: white;
        border-radius: 12px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s ease;
        margin-right: 35px;
    }

        .primary-button:hover {
            background-color: var(--light-purple);
            text-decoration: none;
            color: white;
        }

    .table-container {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

    .promotions-table {
        width: 90%;
        max-width: 1100px;
        border-collapse: collapse;
        background-color: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 30px rgba(72, 52, 112, 0.3);
    }

        .promotions-table thead {
            background-color: var(--purple);
            color: white;
        }

        .promotions-table th,
        .promotions-table td {
            padding: 14px 16px;
            text-align: left;
        }

        .promotions-table tbody tr:nth-child(even) {
            background-color: var(--gray);
        }

    .actions-column {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .action-button {
        display: flex;
        align-items: center;
        gap: 8px;
        color: var(--purple);
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s;
    }

        .action-button:hover {
            color: var(--light-purple);
        }

        .action-button.delete {
            color: var(--wine);
        }

            .action-button.delete:hover {
                color: var(--light-wine);
            }

    .icon {
        width: 18px;
        height: 18px;
    }
</style>
