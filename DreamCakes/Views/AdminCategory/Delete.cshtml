@model DreamCakes.Dtos.Admin.AdminCategoryDto

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar</h2>

<h3>¿Estás seguro de eliminar esta categoria?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.CatName)</dt>
        <dd>@Html.DisplayFor(model => model.CatName)</dd>

        <dt>@Html.DisplayNameFor(model => model.CatDescription)</dt>
        <dd>@Html.DisplayFor(model => model.CatDescription)</dd>

        <dt>@Html.DisplayNameFor(model => model.CatIsActive)</dt>
        <dd>@Html.DisplayFor(model => model.CatIsActive)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Volver a la lista", "Index")
        </div>
    }
</div>
