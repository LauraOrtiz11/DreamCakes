@model DreamCakes.Dtos.Admin.AdminOrderAssignmentViewDto
@{
    ViewBag.Title = "Asignación de Pedidos - Dreams Cake";
}

<div class="container py-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-truck mr-2"></i>Asignación de Pedidos</h4>
        </div>

        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert">
                        <span>&times;</span>
                    </button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert">
                        <span>&times;</span>
                    </button>
                </div>
            }

            @if (Model?.UnassignedOrders == null || !Model.UnassignedOrders.Any())
            {
                <div class="alert alert-info text-center py-4">
                    <i class="fas fa-check-circle fa-3x text-muted mb-3"></i>
                    <h5>No hay pedidos pendientes de asignación</h5>
                    <p class="mb-0">Todos los pedidos han sido asignados a domiciliarios.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th># Pedido</th>
                                <th>Cliente</th>
                                <th>Dirección</th>
                                <th>Fecha</th>
                                <th>Entrega Estimada</th>
                                <th>Total</th>
                                <th colspan="2">Asignación</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.UnassignedOrders)
                            {
                                <tr>
                                    <td>@order.OrderId</td>
                                    <td>@order.CustomerName</td>
                                    <td>@order.DeliveryAddress</td>
                                    <td>@order.OrderDate.ToString("g")</td>
                                    <td>@order.EstimatedDelivery.ToString("g")</td>
                                    <td>@order.TotalAmount.ToString("C")</td>
                                    <td colspan="2">
                                        @using (Html.BeginForm("AssignOrder", "AdminAssignedOrder", FormMethod.Post, new { @class = "form-inline d-flex align-items-center" }))
                                        {
                                            @Html.Hidden("OrderId", order.OrderId)

                                            <select name="DeliveryUserId" class="form-control form-control-sm mr-2" required style="min-width: 200px;">
                                                <option value="">Seleccionar...</option>
                                                @if (Model.DeliveryUsers != null)
                                                {
                                                    foreach (var delivery in Model.DeliveryUsers)
                                                    {
                                                        <option value="@delivery.UserId">@delivery.FullName - @delivery.Phone</option>
                                                    }
                                                }
                                            </select>

                                            <button type="submit" class="btn btn-sm btn-primary">
                                                <i class="fas fa-user-check mr-1"></i> Asignar
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
